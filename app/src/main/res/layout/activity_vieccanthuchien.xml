<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.VieccanthuchienActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/AppTheme"
            android:elevation="4dp"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <LinearLayout
                    android:paddingTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15pt"
                    android:paddingRight="7pt"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_edittext">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp">
                    <TextView
                            android:id="@+id/txtName"
                            android:textSize="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thi Nguyễn Gym"
                            android:textColor="#000"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="17dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txtdiachi"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ :"
                            android:textStyle="bold"
                    />
                    <TextView
                            android:id="@+id/edtdiachi"
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:text="192 Trần Văn Dư, Phường 13, Quận Tân Bình"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txtsdt"
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:layout_height="wrap_content"
                            android:text="Số điện thoại :"
                            android:textStyle="bold"
                    />
                    <TextView
                            android:id="@+id/edtsdt"
                            android:layout_width="match_parent"
                            android:textSize="16dp"
                            android:text="09019809836"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="22dp"
                        android:layout_marginTop="11dp">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <Button
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="19dp"
                                android:background="@drawable/ic_phone_in_talk_black_4dp"
                                android:drawableTop="@drawable/ic_launcher_foreground"
                                android:paddingTop="13dp"
                                android:id="@+id/btnCall"
                                android:focusable="false"
                        />
                        <Button
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_image_black_24dp"
                                android:drawableTop="@drawable/ic_launcher_foreground"
                                android:paddingTop="13dp"
                                android:id="@+id/btnImage"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="50dp"
                    >
                        <TextView
                                android:id="@+id/refuse"
                                android:layout_marginRight="9dp"
                                android:layout_width="wrap_content"
                                android:textSize="16dp"
                                android:layout_height="wrap_content"
                                android:text="Từ chối"
                                android:textColor="#000"
                        />
                        <TextView
                                android:id="@+id/canlam"
                                android:layout_width="wrap_content"
                                android:textSize="16dp"
                                android:layout_height="wrap_content"
                                android:text="Xác nhận"
                                android:textColor="#000"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="32dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:text="Cần xác thực trong tuần"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>